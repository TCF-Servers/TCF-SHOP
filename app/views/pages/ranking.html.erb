<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mb-4">üèÜ Classement des Votes</h1>
      
      <!-- Bootstrap 5.2 Tabs -->
      <ul class="nav nav-tabs" id="rankingTabs" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="current-month-tab" data-bs-toggle="tab" data-bs-target="#current-month" type="button" role="tab" aria-controls="current-month" aria-selected="true">
            <i class="fas fa-calendar-alt me-2"></i>Mois Actuel
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="last-month-tab" data-bs-toggle="tab" data-bs-target="#last-month" type="button" role="tab" aria-controls="last-month" aria-selected="false">
            <i class="fas fa-history me-2"></i>Mois Pr√©c√©dent
          </button>
        </li>
      </ul>

      <!-- Tab Content -->
      <div class="tab-content" id="rankingTabsContent">
        <!-- Current Month Tab -->
        <div class="tab-pane fade show active" id="current-month" role="tabpanel" aria-labelledby="current-month-tab">
          <div class="card mt-3">
            <div class="card-header">
              <h5 class="card-title mb-0">
                <i class="fas fa-trophy text-warning me-2"></i>
                Classement du Mois Actuel (<%= Date.current.strftime("%B %Y") %>)
              </h5>
            </div>
            <div class="card-body">
              <% if @current_month_ranking.any? %>
                <div class="table-responsive">
                  <table class="table table-striped table-hover">
                    <thead class="table-dark">
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Joueur</th>
                        <th scope="col">Votes</th>
                        <th scope="col">Total</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @current_month_ranking.each_with_index do |player, index| %>
                        <tr>
                          <td>
                            <% if index == 0 %>
                              <span class="badge bg-warning text-dark">ü•á 1er</span>
                            <% elsif index == 1 %>
                              <span class="badge bg-secondary">ü•à 2√®me</span>
                            <% elsif index == 2 %>
                              <span class="badge bg-warning">ü•â 3√®me</span>
                            <% else %>
                              <span class="badge bg-primary"><%= index + 1 %></span>
                            <% end %>
                          </td>
                          <td>
                            <strong><%= player.in_game_name %></strong>
                          </td>
                          <td>
                            <span class="badge bg-success fs-6"><%= player.current_month_valid_votes %> votes</span>
                          </td>
                          <td>
                            <span class="badge bg-info fs-6"><%= player.votes_count || 0 %> total</span>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              <% else %>
                <div class="text-center py-5">
                  <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                  <p class="text-muted">Aucun vote enregistr√© pour ce mois.</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Last Month Tab -->
        <div class="tab-pane fade" id="last-month" role="tabpanel" aria-labelledby="last-month-tab">
          <div class="card mt-3">
            <div class="card-header">
              <h5 class="card-title mb-0">
                <i class="fas fa-medal text-info me-2"></i>
                Classement du Mois Pr√©c√©dent (<%= Date.current.last_month.strftime("%B %Y") %>)
              </h5>
            </div>
            <div class="card-body">
              <% if @last_month_ranking.any? %>
                <div class="table-responsive">
                  <table class="table table-striped table-hover">
                    <thead class="table-dark">
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Joueur</th>
                        <th scope="col">Votes</th>
                        <th scope="col">Total</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @last_month_ranking.each_with_index do |player, index| %>
                        <tr>
                          <td>
                            <% if index == 0 %>
                              <span class="badge bg-warning text-dark">ü•á 1er</span>
                            <% elsif index == 1 %>
                              <span class="badge bg-secondary">ü•à 2√®me</span>
                            <% elsif index == 2 %>
                              <span class="badge bg-warning">ü•â 3√®me</span>
                            <% else %>
                              <span class="badge bg-primary"><%= index + 1 %></span>
                            <% end %>
                          </td>
                          <td>
                            <strong><%= player.in_game_name %></strong>
                          </td>
                          <td>
                            <span class="badge bg-info fs-6"><%= player.last_month_valid_votes %> votes</span>
                          </td>
                          <td>
                            <span class="badge bg-info fs-6"><%= player.votes_count || 0 %> total</span>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              <% else %>
                <div class="text-center py-5">
                  <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                  <p class="text-muted">Aucun vote enregistr√© pour le mois pr√©c√©dent.</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

